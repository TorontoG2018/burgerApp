<div class="row">

  <div class="col-sm-6">
    <ul>
      {{#each burgers}} {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="notdevoured" data-id="{{id}}"> Burgers!</button>
      </li>
      {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="col-sm-6">
    {{#each burgers}} {{#if devoured}}
    <li>
      {{burger_name}}
      <button class="yesdevoured" data-id="{{id}}">Eat !</button>
    </li>
    {{/if}} {{/each}}
  </div>
</div>

<h2>Add Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit" class="add-burger">Submit</button>
</form>